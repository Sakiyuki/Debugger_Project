  @*I will use two rows to layout my user assignment.  Top row will be my ListBoxes and the bottom row is just my summit button.*@
<hr/>

@using (Html.BeginForm("ManageProjectUsers", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("ProjectId", Model.Id)

    <div class="row">
        <div class="col-mi-4 text-center">
            <h2>Project Manager</h2>
            @Html.ListBox("ProjectManagers")
        </div>
        <div class="col-md-4 text-center">
            <h2>Developers</h2>
            @Html.ListBox("Developers")
        </div>
        <div class="col-md-4 text-center">
            <h2>Submitters</h2>
            @Html.ListBox("Submitters")
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-primary btn-lg">ASSIGN</button>
        </div>
    </div>
}