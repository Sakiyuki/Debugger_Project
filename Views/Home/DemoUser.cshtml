@*@{
    Layout = null;
}*@

<!DOCTYPE html>

<div class="row">
    @using (Html.BeginForm("DemoLogin", "Account"))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("Role", "DemoAdmin")
    }
</div>


<head>
    <meta charset="utf-8" />
    <title>Color Admin | Bootstrap 4</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />

    <!-- ================== BEGIN BASE CSS STYLE ================== -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/all.min.css" rel="stylesheet" />
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    <link href="~/Content/style.min.css" rel="stylesheet" />
    <link href="~/Content/style-responsive.css" rel="stylesheet" />
    <link href="~/Content/default.css" rel="stylesheet" />



    <!-- ================== END BASE CSS STYLE ================== -->
    <!-- ================== BEGIN BASE JS ================== -->

    <script src="~/Scripts/pace.min.js"></script>
    <!-- ================== END BASE JS ================== -->
</head>
<body>
    <h2>Demo User<i class="icon-user"></i></h2>

    <div class="row">
        <div class="col-md-3">
            @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("DemoEmail", "DemoAdminEmail")

                <div class="m-b-10 f-s-10 m-t-5"><b class="text-inverse">Demo Page</b></div>
                <!-- begin card-group -->
                <div class="card-group">
                    <!-- begin card -->
                    <div class="card">
                        <img class="card-img-top" src="~/Images/gallery-6.jpg" alt="Card image cap" />
                        <div class="card-block">
                            <h4 class="card-title">Demo Admin</h4>
                            <p class="card-text">This is the Demo login for the Admins.</p>
                            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                            <a href="javascript:;" data-click="swal-success" class="btn btn-success">Admin</a>
                        </div>
                    </div>
                </div>
            }
        </div> 
        <div class="col-md-3">
            @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("DemoEmail", "DemoProjectManagerEmail")
                <img class="card-img-top" src="~/Images/gallery-7.jpg" alt="Card image cap" />
                <div class="card-block">
                    <h4 class="card-title">Demo Project Manager</h4>
                    <p class="card-text">This is login for the Project Managers.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    <a href="javascript:;" data-click="swal-success" class="btn btn-success">Proj Manager</a>
                </div>
             }
        </div>
        <div class="col-md-3">
            @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("DemoEmail", "DemoDeveloperEmail")
                <img class="card-img-top" src="~/Images/gallery-8.jpg" alt="Card image cap" />
                <div class="card-block">
                    <h4 class="card-title">Demo Developers</h4>
                    <p class="card-text">This is the login page for the Developers.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    <a href="javascript:;" data-click="swal-success" class="btn btn-success">Developers</a>
                </div>
            }
        </div>
        @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("DemoEmail", "DemoSubmitterEmail")
            <div class="col-md-3">
                <img class="card-img-top" src="~/Images/gallery-9.jpg" alt="Card image cap" />
                <div class="card-block">
                    <h4 class="card-title">Submitters</h4>
                    <p class="card-text">This is the login page for the Submitters.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    <a href="javascript:;" data-click="swal-success" class="btn btn-success">Submitter</a>
                </div>
            </div>
          }
    </div>
</body>
